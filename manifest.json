{
  "name": "__MSG_name__",
  "version": "2.0.0",
  "description": "__MSG_description__",
  "manifest_version": 3,
  "default_locale": "en",
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "img/icon16.png",
    "32": "img/icon32.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "action": {
    "default_title": "__MSG_tooltip__",
    "default_icon": {
      "16": "img/icon16.png",
      "32": "img/icon32.png"
    }
  },
  "commands": {
    "toggle": {
      "suggested_key": {
        "default": "Alt+Shift+R"
      },
      "description": "__MSG_toggle__"
    }
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ]
}
